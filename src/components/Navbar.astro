<header class="fixed top-0 z-50 bg-cyan-950 shadow-sm w-full">
  <div class="container mx-auto px-4">
    <!-- Top Bar -->
    <div class="flex items-center justify-between py-3">
      <!-- Logo and Mobile Menu Button -->
      <div class="flex items-center">
        <!-- Mobile Menu Button (hidden on desktop) -->
        <button class="md:hidden text-white mr-4" aria-label="Toggle menu" id="mobile-menu-button">
          <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16" />
          </svg>
        </button>
        
        <!-- Logo -->
        <a href="/" class="flex items-center" aria-label="EZVIZ Home">
          <img
            src="/src/assets/images/logo.png"
            alt="EZVIZ Logo"
            class="h-10 w-auto object-contain"
            width="140"
            height="40"
          />
        </a>
      </div>

      <!-- Desktop Navigation -->
      <nav class="hidden md:flex items-center space-x-8">
        <a href="/" class="text-white hover:text-gray-400 font-medium transition-colors duration-200">Home</a>
        <a href="/product" class="text-white hover:text-gray-400 font-medium transition-colors duration-200">Products</a>
        <a href="/cloudplay" class="text-white hover:text-gray-400 font-medium transition-colors duration-200">CloudPlay</a>
        <a href="/where-to-buy" class="text-white hover:text-gray-400 font-medium transition-colors duration-200">Where to buy</a>
        <a href="/support" class="text-white hover:text-gray-400 font-medium transition-colors duration-200">Support</a>
      </nav>

      <!-- Right Side Icons -->
      <div class="flex items-center space-x-6">
        <!-- Search Button -->
        <button class="text-white hover:text-gray-400 transition-colors duration-200" aria-label="Search">
          <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z" />
          </svg>
        </button>
        
        <!-- Country Selector -->
        <div class="relative group">
          <button class="text-white hover:text-gray-400 font-medium flex items-center transition-colors duration-200" aria-expanded="false" aria-haspopup="true" id="country-selector">
            <span>India</span>
            <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4 ml-1" fill="none" viewBox="0 0 24 24" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 9l-7 7-7-7" />
            </svg>
          </button>
          <!-- Country Dropdown (hidden by default) -->
          <div class="absolute right-0 mt-2 w-48 bg-white rounded-md shadow-lg py-1 hidden group-hover:block z-50">
            <a href="#" class="block px-4 py-2 text-gray-800 hover:text-gray-400">United States</a>
            <a href="#" class="block px-4 py-2 text-gray-800 hover:text-gray-400">United Kingdom</a>
            <a href="#" class="block px-4 py-2 text-gray-800 hover:text-gray-400">Australia</a>
            <a href="#" class="block px-4 py-2 text-gray-800 hover:text-gray-400">Germany</a>
          </div>
        </div>
      </div>
    </div>

    <!-- Mobile Navigation (hidden by default) -->
    <nav class="md:hidden hidden py-4 border-t border-gray-700" id="mobile-menu">
      <div class="flex flex-col space-y-4">
        <a href="/security-cameras" class="text-white hover:text-cyan-300 font-medium block py-2">Security Cameras</a>
        <a href="/smart-home" class="text-white hover:text-cyan-300 font-medium block py-2">Smart Home</a>
        <a href="/cloudplay" class="text-white hover:text-cyan-300 font-medium block py-2">CloudPlay</a>
        <a href="/where-to-buy" class="text-white hover:text-cyan-300 font-medium block py-2">Where to buy</a>
        <a href="/support" class="text-white hover:text-cyan-300 font-medium block py-2">Support</a>
      </div>
    </nav>
  </div>
</header>

<script>
  // Simple JavaScript to toggle mobile menu
  document.getElementById('mobile-menu-button').addEventListener('click', function() {
    const menu = document.getElementById('mobile-menu');
    menu.classList.toggle('hidden');
  });
</script>